<div class="login__overlay">
  <div class="login__container">
    <div class="login__header">
      <h1 class="login__text">Регистрация</h1>
    </div>
    <div id="wrapper">
    <%= form_with model: @user do |form| %>
        <p> <%= form.label :name, 'Ваше имя' %></p>
        <p> <%= form.text_field :name %></p>
        <p> <%= form.label :nickname, 'Ваш nick' %></p>
        <p> <%= form.text_field :nickname %></p>
        <p> <%= form.label :email, 'Ваш email' %></p>
        <p> <%= form.text_field :email %></p>
        <p> <%= form.label :password, 'Ваш пароль' %></p>
        <p> <%= form.password_field :password %></p>
        <%= form.submit %>
    <% end %>
  </div>
</div>